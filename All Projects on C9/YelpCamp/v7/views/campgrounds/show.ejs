<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <a class="list-group-item active">Info 1</a>
                <a class="list-group-item">Info 2</a>
                <a class="list-group-item">Info 3</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%= campground.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success btn-lg" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comments</a>
                </div>
                <hr></hr>
                <% campground.comments.forEach(function(comment) { %> 
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %> </strong>
                            <span class="pull-right">10days ago</span>
                            <p><%= comment.text %></p>
                        </div>
                    </div>
                <% }); %>
                <p>
                    <a class ="btn btn-default btn-lg" href="/campgrounds">Go Back To Campgrounds Page</a>
                </p>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer%>